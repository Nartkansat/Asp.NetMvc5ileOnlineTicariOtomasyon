@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sirano = 0;
                }
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++; } @sirano</td>
                        <td>@x.Departman</td>
                        <td>
                            @if (x.Sayi >= 1 && x.Sayi <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Sayi >= 4 && x.Sayi <=6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Sayi >= 7)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        
                        <td style="padding-top:0px !important;">
                            @if (x.Sayi >= 1 && x.Sayi <= 3)
                            {
                                <span class="badge bg-warning">@x.Sayi</span>
                            }
                            @if (x.Sayi >= 4 && x.Sayi <= 6)
                            {
                                <span class="badge bg-success">@x.Sayi</span>
                            }
                            @if (x.Sayi >= 7)
                            {
                                <span class="badge bg-danger">@x.Sayi</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
